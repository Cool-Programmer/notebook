.wrapper_with_padding
  #notes.clearfix
    - unless @notes.blank?
      -@notes.each do |note|
        %a{href: (url_for [note])}
          .note
            %p.title= note.title
            %p.date
              = time_ago_in_words(note.created_at)
              ago
    - else
      %h2 Add a note
      %p Looks like you do not have any note yet. Go ahead and write one :)
      = link_to 'New Note', new_note_path, class: 'btn'
